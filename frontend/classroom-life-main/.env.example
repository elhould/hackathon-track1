# Required for student simulation (OpenAI API)
OPENAI_API_KEY=sk-...

# Optional: For text-to-speech (ElevenLabs API)
ELEVENLABS_API_KEY=...

# Frontend API URL (defaults to http://localhost:3001)
VITE_API_URL=http://localhost:3001

# Optional: Student data mode (leave empty or 'local' for local data, 'remote' for API)
VITE_STUDENT_DATA_MODE=local
